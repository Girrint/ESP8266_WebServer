String sendHTML() {
  String ptr = "<!DOCTYPE html><html lang='vi'>\n";
  ptr += "<head>\n";
  ptr += "<meta charset='UTF-8'>\n";
  ptr += "<title>Tr√°i Tim Lung Linh</title>\n";
  ptr += "<style>\n";
  ptr += "body { margin:0; background:black; overflow:hidden; }\n";
  ptr += "canvas { display:block; }\n";
  ptr += "</style>\n";
  ptr += "</head><body>\n";
  ptr += "<canvas id='canvas'></canvas>\n";
  ptr += "<script>\n";

  ptr += "const canvas = document.getElementById('canvas');\n";
  ptr += "const ctx = canvas.getContext('2d');\n";
  ptr += "canvas.width = window.innerWidth;\n";
  ptr += "canvas.height = window.innerHeight;\n";
  ptr += "const centerX = canvas.width / 2;\n";
  ptr += "const centerY = canvas.height / 2;\n";

  ptr += "let particles = [];\n";
  ptr += "let angle = 0;\n";

  ptr += "function heartShape(t) {\n";
  ptr += "  const x = 16 * Math.pow(Math.sin(t), 3);\n";
  ptr += "  const y = 13 * Math.cos(t) - 5 * Math.cos(2 * t) - 2 * Math.cos(3 * t) - Math.cos(4 * t);\n";
  ptr += "  return { x, y };\n";
  ptr += "}\n";

  ptr += "function generateParticles() {\n";
  ptr += "  particles = [];\n";
  ptr += "  const total = 5000;\n"; //more particles
  ptr += "  for (let i = 0; i < total; i++) {\n";
  ptr += "    const t = Math.random() * Math.PI * 2;\n";
  ptr += "    const r = Math.pow(Math.random(), 0.5);\n"; //more evenly distributed
  ptr += "    const { x, y } = heartShape(t);\n";
  ptr += "    particles.push({\n";
  ptr += "      x: x * r,\n";
  ptr += "      y: y * r,\n";
  ptr += "      alpha: Math.random() * 0.5 + 0.5,\n";
  ptr += "      size: Math.random() * 1.2 + 0.3\n";
  ptr += "    });\n";
  ptr += "  }\n";
  ptr += "}\n";

  ptr += "function drawHeart(scale) {\n";
  ptr += "  ctx.clearRect(0, 0, canvas.width, canvas.height);\n";
  ptr += "  particles.forEach(p => {\n";
  ptr += "    const px = centerX + p.x * scale * 18;\n"; //bigger heart
  ptr += "    const py = centerY - p.y * scale * 18;\n";
  ptr += "    ctx.beginPath();\n";
  ptr += "    ctx.arc(px, py, p.size, 0, 2 * Math.PI);\n";
  ptr += "    ctx.fillStyle = `rgba(255, 0, 100, ${p.alpha})`;\n";
  ptr += "    ctx.fill();\n";
  ptr += "  });\n";
  ptr += "}\n";

  ptr += "generateParticles();\n";
  ptr += "function animate() {\n";
  ptr += "  angle += 0.05;\n";
  ptr += "  const scale = 1 + 0.04 * Math.sin(angle * 2);\n";
  ptr += "  drawHeart(scale);\n";
  ptr += "  requestAnimationFrame(animate);\n";
  ptr += "}\n";
  ptr += "animate();\n";

  ptr += "</script>\n";
  ptr += "</body></html>\n";
  return ptr;
}
